<Window x:Name="PureNote" x:Class="PureNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PureNote"
        mc:Ignorable="d"
        Title="PureNote" Height="240" Width="300" Topmost="True"  WindowStyle="None">

    <RichTextBox x:Name="RichTextBox" Background="#FF202020" BorderBrush="{x:Null}" FontSize="16" Language="ja-jp" Foreground="#FFC9C9C9" Padding="10" Block.LineHeight="6" SelectionBrush="White" BorderThickness="0" Cursor="IBeam">
    </RichTextBox>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      ResizeBorderThickness="20,20,20,20" />
    </WindowChrome.WindowChrome>
</Window>